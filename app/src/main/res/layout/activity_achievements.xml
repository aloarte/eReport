<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/app_bar_inner" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.uc3m.p4r4d0x.emergapp.AchievementsActivity"
        tools:showIn="@layout/activity_achievements">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayoutAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="#26a69a" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerAchievements"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabLayoutAchievements"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>



</LinearLayout>
